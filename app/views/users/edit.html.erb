<%= form_for @user do |f| %>
  <ul>
      <% @user.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <%= f.label :username, "Username Here:" %>
  <%= f.text_field :username %> <br><br>
  <%= f.label :email, "Email Here:" %>
  <%= f.email_field :email, placeholder: "email@test.com" %><br><br>
  <%= f.label :password, "Password:" %>
  <%= f.password_field :password %><br><br>
  <%= f.submit "Submit"%>
<% end %>

